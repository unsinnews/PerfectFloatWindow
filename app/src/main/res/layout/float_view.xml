<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/llContainer"
        android:layout_width="@dimen/float_button_size"
        android:layout_height="@dimen/float_button_size"
        android:background="@drawable/float_bg_gray"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/float_icon_size"
            android:layout_height="@dimen/float_icon_size"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_search"
            android:tint="#FFFFFF"/>

    </FrameLayout>

</FrameLayout>
